{
  "name": "intelligent-todo",
  "version": "1.0.0",
  "description": "An intelligent todo application with CLI and web interfaces",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:cli": "npm run build -w packages/cli",
    "build:web": "npm run build -w packages/web",
    "build:api": "npm run build -w packages/api",
    "build:shared": "npm run build -w packages/shared",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "npm run format --workspaces",
    "dev": "npm run dev --workspaces",
    "dev:api": "npm run dev -w packages/api",
    "dev:web": "npm run dev -w packages/web",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=10.2.0"
  },
  "author": "Your Name",
  "license": "MIT"
}