{
  "name": "@intelligent-todo/cli",
  "version": "1.0.0",
  "description": "Command-line interface for intelligent-todo",
  "main": "dist/index.js",
  "bin": {
    "todo": "bin/todo"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "clean": "rimraf dist",
    "dev": "ts-node src/index.ts"
  },
  "dependencies": {
    "@intelligent-todo/shared": "^1.0.0",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}